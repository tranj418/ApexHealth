create view sqvApptView as
(
select 
	   apptID
    ,patientID
    ,concat(pa.firstName, " ", pa.lastName) as "Patient Name"
    ,physicianID
    ,concat(ph.firstName, " ", ph.lastName) as "Assigned Physician"
    ,apptDate as "Appointment Date"
    ,apptReason as "Appointment Reason"
from appointments
join patients pa
using(patientID)
join physicians ph
using(physicianID)
)
